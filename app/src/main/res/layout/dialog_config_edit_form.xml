<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone" />

        <EditText
            android:id="@+id/input_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_url" />

        <EditText
            android:id="@+id/input_json_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="JSON Template" />

        <EditText
            android:id="@+id/input_json_headers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="JSON Headers" />

        <EditText
            android:id="@+id/input_number_retries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Retries"
            android:inputType="number" />

        <TextView
            android:id="@+id/input_sim_slot_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIM Slot" />

        <Spinner
            android:id="@+id/input_sim_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/input_ignore_ssl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ignore SSL" />

        <CheckBox
            android:id="@+id/input_chunked_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chunked Mode" />

    </LinearLayout>

</ScrollView>
